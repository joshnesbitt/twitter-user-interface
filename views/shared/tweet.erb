<div class="tweet mb">

  <p><%= auto_link(tweet.text, username_include_symbol: true, username_url_base: '/profile/', hashtag_url_base: '/hashtag/') %></p>

  <div class="tweet__meta">

    <p>
      <i class="fa fa-star"></i>
      <%= tweet.favorite_count %>

      &nbsp;

      <i class="fa fa-retweet"></i>
      <%= tweet.retweet_count %>

      &nbsp;

      <%= format_date(tweet.created_at) %>
    </p>

  </div>

</div>
