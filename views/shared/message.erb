<div class="tweet mb">

  <div class="tweet__content">

    <img src="<%= message.sender.profile_image_uri %>" class="float--left mr">

    <p><%= render_tweet_content(message) %></p>

  </div>

  <div class="tweet__meta">

    <p>

      <%= format_date(message.created_at) %>

    </p>

  </div>

</div>
